<h1>Listing all Collections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @collection.each do |collection| %>
      <tr>
        <td><%= link_to "#{collection.name}", collection %></td>
        <% if admin_signed_in? %>
          <td><%= link_to "Edit", edit_collection_path(collection) %></td>
          <td><%= link_to "Delete", collection, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

<% if admin_signed_in? %>
  <%= link_to "New Collection", new_collection_path %>
<% end %>  