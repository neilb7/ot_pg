<h1><%= @collection.name %></h1>


<%= link_to "Back", collections_path %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @collection.titles.each do |title| %>
        <tr>
          <td><%= title.name %></td>
          <td><%= title.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= form_for([@collection, @collection.titles.build]) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>